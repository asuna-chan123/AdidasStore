@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="login-container">
    <head>
        <meta charset="UTF-8">
        <title>Đăng nhập hoặc Đăng ký | Adidas Store</title>

        <!-- Liên kết CSS -->
        <link rel="stylesheet" href="../Content/assets/login.css">
        <script src="../Scripts/includePartials.js" defer></script>
        <link rel="stylesheet" href="../partials/header.css">
        <link rel="stylesheet" href="../partials/footer.css">
    </head>
    <body>
        <header></header>
        <main class="login-container">
            <div class="login-box">
                <!-- Logo + tiêu đề -->
                <div class="login-header">
                    <div class="brand">
                        <img src="../Content/assets/adidas.svg" alt="Adidas" class="brand-logo">
                        <span class="brand-text">adiclub</span>
                    </div>
                    <h2>ĐĂNG NHẬP HOẶC ĐĂNG KÝ</h2>
                    <p>Tận hưởng quyền truy cập chỉ dành cho hội viên vào các sản phẩm, trải nghiệm, ưu đãi độc quyền và hơn thế nữa.</p>
                </div>

                <!-- Nút mạng xã hội -->
                <div class="social-login">
                    <button class="social-btn apple">
                        <img src="../Content/assets/apple.svg" alt="Apple">
                    </button>
                    <button class="social-btn facebook">
                        <img src="../Content/assets/facebook.svg" alt="Facebook">
                    </button>
                    <button class="social-btn google">
                        <img src="../Content/assets/google.svg" alt="Google">
                    </button>
                </div>

                <!-- Form -->
                <form>
                    <input type="email" placeholder="ĐỊA CHỈ EMAIL *" required>

                    <label><input type="checkbox" required> Có, tôi trên 16 tuổi <a href="#">Tại sao nó quan trọng?</a></label>

                    <label>
                        <input type="checkbox" required>
                        Tôi đã đọc, hiểu và chấp thuận <a href="#">Chính sách Bảo mật của adidas</a>,
                        <a href="#">Các Điều khoản và Điều kiện của adiClub</a>.
                    </label>

                    <label>
                        <input type="checkbox">
                        Tôi đồng ý việc sử dụng thông tin cá nhân cho mục đích quảng cáo (<a href="#">Chi tiết tại Chính sách bảo mật</a>).
                    </label>

                    <label>
                        <input type="checkbox">
                        Tôi đồng ý việc chia sẻ, sử dụng dữ liệu theo <a href="#">chính sách bảo mật</a>.
                    </label>

                    <label class="remember"><input type="checkbox" checked> Giữ đăng nhập cho tôi. <a href="#">Thêm thông tin</a></label>

                    <button type="submit" class="submit-btn">TIẾP TỤC →</button>
                </form>
            </div>
        </main>
        <footer></footer>
    </body>
</section>
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}


