@model IEnumerable<WebApplication6.Models.Customer>

@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight:bold;">DANH SÁCH KHÁCH HÀNG</h2>

<p>
    @Html.ActionLink("Thêm Khách Hàng Mới", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã KH</th>
            <th>Tên Khách Hàng</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDCus</td>
                <td>@item.NameCus</td>
                <td>
                    @Html.ActionLink("Cập nhật", "Edit", new { id = item.IDCus }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCus }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDCus })
                </td>
            </tr>
        }
    </tbody>
</table>
