        function updateProductImages(colorIndex) {
            const variant = colorVariants[colorIndex];
            if (!variant) return;

            // ·∫£nh 
            const mainImage = document.getElementById('mainImage');
            mainImage.style.opacity = '0.5';
            setTimeout(() => {
                mainImage.src = variant.mainImage;
                mainImage.style.opacity = '1';
            }, 150);

            const thumbnails = document.querySelectorAll('.thumbnail');
            let firstActiveThumbnail = null;
            let visibleThumbnailCount = 0;
            const initialVisibleLimit = 4; // ·∫£nh theme

            thumbnails.forEach((thumbnail, index) => {
                const smallImgSrc = variant.thumbnails[index];

                // xem ·∫£nh c√≥ hayko
                if (smallImgSrc && !smallImgSrc.includes('/placeholder.svg')) {
                    // c√≥
                    visibleThumbnailCount++;

                    //hi·ªán
                    thumbnail.style.display = '';

                    //hi·ªán ·∫£nh
                    const img = thumbnail.querySelector('img');
                    img.style.opacity = '0.5';
                    setTimeout(() => {
                        img.src = smallImgSrc;
                        img.style.opacity = '1';
                    }, 150);

                    const largeImgSrc = smallImgSrc.replace('height=200&width=200', 'height=600&width=600');

                    thumbnail.onclick = () => changeImage(thumbnail, largeImgSrc);

                    if (visibleThumbnailCount > initialVisibleLimit) {
                        thumbnail.classList.add('hidden');
                    } else {
                        thumbnail.classList.remove('hidden');
                    }


                    if (!firstActiveThumbnail) {
                        firstActiveThumbnail = thumbnail;
                    }
                    thumbnail.classList.remove('active');

                } else {
                    // k c√≥ ·∫£nh th√¨ ·∫©n
                    thumbnail.style.display = 'none';
                    thumbnail.classList.remove('hidden'); 
                    thumbnail.classList.remove('active');
                    thumbnail.onclick = null; 
                }
            });

            if (firstActiveThumbnail) {
                firstActiveThumbnail.classList.add('active');
            }

            document.querySelector('.color-name').textContent = variant.name;

            const dropdownBtn = document.getElementById('imageDropdown');
            const thumbnailGrid = document.getElementById('thumbnailGrid');
            if (visibleThumbnailCount > initialVisibleLimit) {
                dropdownBtn.style.display = 'inline-flex';
                thumbnailGrid.classList.remove('expanded');
                dropdownBtn.classList.remove('expanded');
            } else {
                dropdownBtn.style.display = 'none';
                thumbnailGrid.classList.remove('expanded');
            }
        }

        document.querySelectorAll('.color-option').forEach((option, index) => {
            option.addEventListener('click', function () {
                document.querySelectorAll('.color-option').forEach(o => o.classList.remove('active'));
                this.classList.add('active');

