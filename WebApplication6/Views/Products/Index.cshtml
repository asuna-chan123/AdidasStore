            const startTime = Date.now();
            window.addEventListener("load", () => {
                const elapsed = Date.now() - startTime;
                const remaining = Math.max(0, 500 - elapsed);
                setTimeout(() => {
                    window.scrollTo({ top: 0, left: 0 });
                    document.body.classList.add("loaded");
                }, remaining);
            });
        });
