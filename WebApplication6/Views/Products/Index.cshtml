@model IEnumerable<WebApplication6.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Danh sách sản phẩm -->
<!-- Fonts & -->
