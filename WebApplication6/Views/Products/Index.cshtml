<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
        background: #fff;
        color: #000;
        line-height: 1.5;
    }

    .container {
        max-width: 1440px;
        margin: 0 auto;
        padding: 20px;
        width: 100%;
    }

    .back-nav {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
        font-size: 14px;
    }

        .back-nav a {
            color: #000;
            text-decoration: none;
        }

            .back-nav a:hover {
                text-decoration: underline;
            }

    .back-arrow {
        font-size: 18px;
        font-weight: bold;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
        gap: 20px;
    }

    .page-title {
        flex: 1;
    }

        .page-title h1 {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 8px;
        }

    .item-count {
        font-size: 14px;
        color: #767677;
        margin-bottom: 16px;
    }

    .description {
        font-size: 14px;
        line-height: 1.6;
        color: #000;
        max-width: 800px;
    }

    .filter-button {
        background: #fff;
        border: 1px solid #000;
        padding: 12px 24px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
        transition: all 0.2s;
    }

        .filter-button:hover {
            background: #000;
            color: #fff;
        }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 40px 20px;
        margin-top: 30px;
    }

    .product-card {
        cursor: pointer;
        transition: transform 0.2s;
    }

        .product-card:hover {
            transform: translateY(-4px);
        }

    .product-image {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        background: #f5f5f5;
        margin-bottom: 12px;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity 0.4s ease;
            position: absolute;
            top: 0;
            left: 0;
        }

            .product-image img.main {
                opacity: 1;
            }

            .product-image img.hover {
                opacity: 0;
            }

    .product-card:hover .product-image img.hover {
        opacity: 1;
    }

    .product-card:hover .product-image img.main {
        opacity: 0;
    }

    .product-info {
        padding: 0 4px;
    }

    .product-price {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .product-name {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 4px;
        line-height: 1.4;
    }

    .product-category {
        font-size: 13px;
        color: #767677;
        margin-bottom: 4px;
    }

    .product-colors {
        font-size: 13px;
        color: #767677;
        margin-bottom: 4px;
    }

    .product-badge {
        font-size: 13px;
        color: #000;
        font-weight: 500;
    }

    /* Mobile */
    @@media (max-width: 768px) {
        .container {
            padding: 16px;
        }

        .page-header {
            flex-direction: column;
        }

        .page-title h1 {
            font-size: 24px;
        }

        .filter-button {
            width: 100%;
            justify-content: center;
        }

        .description {
            font-size: 13px;
        }

        .product-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 32px 16px;
            margin-top: 20px;
        }

        .product-info {
            padding: 0 2px;
        }

        .product-price,
        .product-name,
        .product-category,
        .product-colors,
        .product-badge {
            font-size: 12px;
        }
    }

    /* tablet */
    @@media (max-width: 1025px) {
        .container {
            padding: 16px;
        }

        .page-header {
            flex-direction: column;
        }

        .page-title h1 {
            font-size: 24px;
        }

        .filter-button {
            width: 100%;
            justify-content: center;
        }

        .description {
            font-size: 13px;
        }

        .product-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 32px 16px;
            margin-top: 20px;
        }

        .product-info {
            padding: 0 2px;
        }

        .product-price,
        .product-name,
        .product-category,
        .product-colors,
        .product-badge {
            font-size: 12px;
        }
    }

    @@media (max-width: 768px) {
        footer,
        #footer,
        .footer {
            display: none !important;
            visibility: hidden !important;
            opacity: 0 !important;
            height: 0 !important;
            overflow: hidden !important;
        }
    }
</style>

